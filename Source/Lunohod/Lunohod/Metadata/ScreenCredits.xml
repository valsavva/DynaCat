<?xml version="1.0" encoding="UTF-8"?>
  
<Screen Bounds="0,0,480,320">
    <Include File="CommonScreenFunctionality.xml" />
  
    <Include File="ClassUIButton.xml" />
  
    <Resources RootFolder="Global">
        <Texture Id="txrBackground" Source="scr_credits_bg" />
        <Texture Id="txrFrame" Source="scr_credits_frame" />
        <Texture Id="txrPanel" Source="scr_credits_panel" />
        <Font Id="Splash14Font" Source="Splash14Font" />
    </Resources>
    
    <Resources RootFolder="Textures">
        <Texture Id="txrLogo" Source="nomnomlogo_round" />
    </Resources>
  
    <Layer Id="background">
        <Image TextureId="txrBackground" />
    </Layer>
    
    <Layer>
  
  		<Group Bounds="60,50,370,220">
	        <TapArea Action="grpText:*pause" />

	        <Group Id="grpText" Bounds="30,237,310,200">
	            <Text Location="00,000" Text="Our team:" FontId="Splash14Font" Color="#FFDDDD" />
	            <Text Location="00,030" Text="Airat Davletshin  - graphics design" FontId="Splash14Font" />
	            <Text Location="00,055" Text="Ruslan Suleymanov - graphics design" FontId="Splash14Font" />
	            <Text Location="00,080" Text="Vlad Savvateev    - level design," FontId="Splash14Font" />
	            <Text Location="00,105" Text="                    original music / sfx" FontId="Splash14Font" />
	            <Text Location="00,130" Text="Val Savvateev     - programming" FontId="Splash14Font" />
	            <Text Location="00,170" Text="Powered by MonoGame, XGame" FontId="Splash14Font" Color="#FFDDDD" />

	            <Image TextureId="txrLogo" Location="0, 275" />
	            <Text Location="0,345" Text="(c) NomNomApps, 2011-2012" FontId="Splash14Font" Color="#EEEEEE" />
	            <Text Location="0,370" Text="    www.nomnomapps.com" FontId="Splash14Font" Color="#DDFFDD" />
	            <TapArea Bounds="0,345,310,50" Action="system.OpenUrl('http://www.nomnomapps.com')" />
	        </Group>
	        
	        <SequenceSet Id="setScrolling" InProgress="true" RepeatCount="0">
	            <NumAnimation Target="grpText.Y" From="240" To="-230" Duration="20" RepeatCount="1" Fill="Hold"/>
	            <Delay Duration="10"/>
	            <NumAnimation Target="grpText.Opacity" From="1" To="0" Duration="1.1" RepeatCount="1"/>
	        	<Do Action="grpText.Y=240;grpText.Opacity=1" />
	        </SequenceSet>
	        
	        <BoolTrigger Condition="grpText:pause" EnterAction="setScrolling.Pause()" ExitAction="setScrolling.Play()" />
  		</Group>
  
        <Image TextureId="txrPanel" Opacity="1"/>

        <Image TextureId="txrFrame" Opacity="1"/>
  
        <Group Id="btnScrnCreditsBack" Class="clsButton" ClassParams="@BtnImg=exit" Bounds="33, 256, 62, 62">
            <BoolTrigger Condition="btnScrnCreditsBack:Action" EnterAction="system.CloseCurrentScreen();" />
        </Group>
    </Layer>
</Screen>
