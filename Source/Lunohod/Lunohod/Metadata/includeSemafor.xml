<Include>
    <!-- ALSO in the Poni lvl-->
    
    <Resources RootFolder="Sound">
        <SoundFile Id="sndTrain_bell" Source="sfxTranBell"/>
    </Resources>
    
    <Resources RootFolder="Textures">
        <Texture Id="txr_semafor_red" Source="semafor_red" />
        <Texture Id="txr_semafor_green" Source="semafor_green" />
    </Resources>    

    <Sound Id="sndTrainBell1" FileId="sndTrain_bell" Volume="0" Pitch="0"/>
    <Sound Id="sndTrainBell2" FileId="sndTrain_bell" Volume="0" Pitch="0"/>

    <ParallelSet Id="setTrainStart" RepeatCount="1" InProgress="false">
        <SequenceSet RepeatCount="8" >
            <Do Action="sndTrainBell1.Start()" />
            <Delay Duration="0.27" />
            <Do Action="sndTrainBell2.Start()" />
            <Delay Duration="0.27" />
        </SequenceSet>
        <SequenceSet RepeatCount="1">
            <Do Action="sndTrainBell1.Volume=0.3;sndTrainBell2.Volume=0.3" />
            <Delay Duration="1.5" />
            <NumAnimation Target="sndTrainBell1.Volume,sndTrainBell2.Volume" From="0.3,0.3" To="0,0" Duration="4" Fill="End"/>
            <Do Action="sndTrainBell1.Volume=0;sndTrainBell2.Volume=0" />
        </SequenceSet>
        <!--<SequenceSet RepeatCount="1">
            <Delay Duration="3" />
            <NumAnimation Target="sndTrainBell.Pitch" From="0" To="-0.2" Duration="3" />
        </SequenceSet>-->
        
    </ParallelSet>
    
    <SequenceSet InProgress="true" RepeatCount="1">
        <Do Action="setTrainStart.Start()" />
        <Delay Duration="2" />
        <Do Action="img_semafor_red.Disable();img_semafor_green.Enable()" />
    </SequenceSet>
</Include>