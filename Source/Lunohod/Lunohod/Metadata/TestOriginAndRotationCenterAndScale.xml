<?xml version="1.0" encoding="utf-8"?>
<Level Name="AnimationSamples.xml" Bounds="0,0,480,320">

	<Include File="Textures.xml" />
	<Include File="ClassCursor.xml" />
	<Resources RootFolder="Global">
		<Texture Id="blank" Source="blank" />
		<Font Id="SystemFont" Source="SystemFont" />
		<Texture Id="chargers" Source="ch"/>
	</Resources>

	<Class Id="clsRotationAnimation">
		<NumAnimation Target="Rotation" From="0" To="360" Duration="@duration" InProgress="true" />
	</Class>
	
    <Layer Id="background" BackColor="#FFFFFFFF">
        <Image TextureId="white_clear" Bounds="0, 0, 480, 320" Stretch="true" Opacity="1" />
        <Image TextureId="grid_480x320" Bounds="0, 0, 480, 320" Stretch="false" Opacity="1"/>
    </Layer>

	<Layer Id="action" BackColor="#FFFFFFFF">
		<Tower Bounds="0,0,35,35" SignalSpeed="800"/>	
		<Hero Id="hero" Bounds="50,150,50,50" Class="clsHeroCursor" />
		
		<Block Id="blk1" Bounds="0,0,480,1" Edges="Bounce" />
		<Block Id="blk2" Bounds="480,0,1,320" Edges="Bounce" />
		<Block Id="blk3" Bounds="0,320,480,1" Edges="Bounce" />
		<Block Id="blk4" Bounds="0,0,1,320" Edges="Bounce" />
		
		<Group Bounds="50,100,150,150" Rotation="45">
			<Image TextureId="blank" BackColor="#005500" Opacity="0.3"/>
			<NumAnimation Class="clsRotationAnimation" ClassParams="@duration=10" />
			<Image Location="50,50" TextureId="chargers" BackColor="#FF0000"/>
			<Text FontId="SystemFont" Location="15,105" Text="We rotate together!" Color="#000000"/>
		</Group>

		<Group Bounds="250,50,150,150" RotationCenter="75,75" Rotation="45">
			<Image TextureId="blank" BackColor="#005500" Opacity="0.3"/>
			<NumAnimation Class="clsRotationAnimation" ClassParams="@duration=2" />
			<NumAnimation Target="Scale" From="1" To="2" Duration="0.4" Autoreverse="true" InProgress="true"/>
			<Image Location="20,20" TextureId="chargers" RotationCenter="25,25" BackColor="#FF0000">
				<NumAnimation Target="Rotation" From="0" To="360" Duration="10" InProgress="true" />
			</Image>
			<Text FontId="SystemFont" Location="15,105" Text="Text scales too!" Color="#000000"/>
		</Group>
		<Image TextureId="chargers" Origin ="0,50" Location="0,150">
			<NumAnimation Target="X" From="0" To="50" Duration="0.5" RepeatCount="1" InProgress="true" />
		</Image>
		<Image TextureId="chargers" Origin ="0,50" Location="0,320" Scale="3" />
	</Layer>

	<Include File="Dashboard.xml" />	

</Level>

