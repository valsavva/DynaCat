<Include>	

	<Resources RootFolder="Sound">
		<SoundFile Id="sndEnemyRat4Dying" Source="skeletonFX_enemy_dead_scream_1"/>
        <SoundFile Id="sndEnemyRat4Hit1" Source="rat_hit1_demo"/>
        <SoundFile Id="sndEnemyRat4Hit2" Source="rat_hit2_demo"/>
        <SoundFile Id="sndEnemyRat4Hit3" Source="rat_hit3_demo"/>
    </Resources>
	
    <Resources RootFolder="Textures">
        <Texture Id="txrEnemyRat4Default" Source="EnemyRat4_enemy_2"/>
        <Texture Id="txrEnemyRat4Attack" Source="EnemyRat4_enemy_2"/>
        <Texture Id="txrEnemyRat4Dying" Source="EnemyRat4_enemy_2"/>
    </Resources>

         
	<Class Id="clsEnemyRat4">
		<Enemy IsExploding="true" Damage="3">
		
<!-- States -->

            <!-- explosion -->
            <!-- dying -->
			<BoolTrigger Condition="this:BoomClose" EnterAction="this_setDying.Start()">
				<Image TextureId="txrEnemyRat4Dying"/>
			</BoolTrigger>
            <ParallelSet Id="this_setDying" InProgress="false">
                <!--<Let Target="this.Damage" Value="0" />-->
                <Do Action="this:+Destroyed;hero:+GoodExplosion"/>
                <Sound FileId="sndEnemyRat4Dying" Volume="0.5" Pitch="0" Pan="0" InProfress="true"/>
    			<SequenceSet>
    				<NumAnimation Target="this.Opacity" From="1" To="0" Duration="0.3" Autoreverse="false" RepeatCount="2"/>
    				<Do Action="this.Disable()"/>
    			</SequenceSet>
			</ParallelSet>

            <!-- attack -->
            <BoolTrigger Condition="!this:Destroyed">
                <IntersectionTrigger ObjectId1="hero" ObjectId2="this" EnterAction="this.Attack();this.Attack();this_anmDamageDealing.Start()" ExitAction="this_anmDamageDealing.Stop()" Action="hero:GottaDamage" Group="this_sttStates">
                    <Image Id="this_txrEnemyRat4Attack" TextureId="txrEnemyRat4Attack" Bounds="-16, -4, 44, 29"/>
                </IntersectionTrigger>
            </BoolTrigger>

            <SequenceSet Id="this_anmDamageDealing" RepeatCount="0">
                <Do Action="this_anmAttack.Start()" />
                <Delay Duration="system.Rnd(0.3,0.7)" />
            </SequenceSet>

            <ParallelSet Id="this_anmAttack" RepeatCount="1">
                <Do Action="this.Attack()" />
                <RandomSet>
                    <Sound FileId="sndEnemyRat4Hit1" Volume="0.5" Pitch="0.3" Pan="0"/>
                    <Sound FileId="sndEnemyRat4Hit2" Volume="0.5" Pitch="0.3" Pan="0"/>
                    <Sound FileId="sndEnemyRat4Hit3" Volume="0.5" Pitch="0.3" Pan="0"/>
                    <Sound FileId="sndEnemyRat4Hit1" Volume="0.5" Pitch="0.4" Pan="0"/>
                    <Sound FileId="sndEnemyRat4Hit2" Volume="0.5" Pitch="0.4" Pan="0"/>
                    <Sound FileId="sndEnemyRat4Hit3" Volume="0.5" Pitch="0.4" Pan="0"/>
                </RandomSet>
                <NumAnimation Duration="0.1" Target="this_txrEnemyRat4Attack.Opacity" Autoreverse="true" From="1" To="0" RepeatCount="5"/>
            </ParallelSet>

            <!-- default -->
			<BoolTrigger Group="this_sttStates">
				<Image Id="this_txrEnemyRat4Default" TextureId="txrEnemyRat4Default" Bounds="-16, -4, 44, 29"/>
                <!--<Image TextureId="blank" BackColor="#00FF00" Opacity="0.5"/>-->
			</BoolTrigger>
			
		</Enemy>
	</Class>

</Include>

















