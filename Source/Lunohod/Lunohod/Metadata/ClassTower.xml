<Include>	

    <Resources RootFolder="Textures">
        <Texture Id="towerLedOn" Source="transmitter_2_on"/>
        <Texture Id="towerLedOff" Source="transmitter_2_off"/>
    </Resources>

	<Class Id="clsTower">
		<Tower SignalSpeed="256" Bounds="0, 0, 1, 1">
                        
            <BoolTrigger Condition="dashboard:AnyKeyPressed" EnterAction="tower:+LedOn;this_anmSignal.Start()"/>
            
            <SequenceSet Id="this_anmSignal">
                <Delay Duration="0.4"/>
                <Do Action="tower:-LedOn"/>
            </SequenceSet>
            
            <BoolTrigger Condition="tower:LedOn" Group="sttTower">
                <Image TextureId="towerLedOn" Bounds="0, 0, 30, 30"/>
            </BoolTrigger>

            <BoolTrigger Group="sttTower">
                <Image TextureId="towerLedOff" Bounds="0, 0, 30, 30"/>
            </BoolTrigger>

            <!-- We'll need to remove this 
            <Text Text="=SignalSpeed" FontId="SystemFont" Location="10,10" Color="#000000"/>
            <BoolTrigger Condition="system:towerIncreaseSpeed" Action="SignalSpeed=SignalSpeed+10"/>
            <BoolTrigger Condition="system:towerReduceSpeed" Action="SignalSpeed=SignalSpeed-10"/>-->

        </Tower>
	</Class>

</Include>
















