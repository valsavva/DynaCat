<Include>
    <Resources RootFolder="Global">
        <Texture Id="txrUiBtn_back_N" Source="ui_btn_back_01" />
        <Texture Id="txrUiBtn_back_P" Source="ui_btn_back_03" />
        <Texture Id="txrUiBtn_next_N" Source="ui_btn_next_01" />
        <Texture Id="txrUiBtn_next_P" Source="ui_btn_next_03" />
        <Texture Id="txrUiBtn_forwind_N" Source="ui_btn_forwind_01" />
        <Texture Id="txrUiBtn_forwind_P" Source="ui_btn_forwind_03" />
        <Texture Id="txrUiBtn_full version_N" Source="ui_btn_full version_01" />
        <Texture Id="txrUiBtn_full version_P" Source="ui_btn_full version_03" />
        <Texture Id="txrUiBtn_info_N" Source="ui_btn_info_01" />
        <Texture Id="txrUiBtn_info_P" Source="ui_btn_info_03" />
        <Texture Id="txrUiBtn_exit_N" Source="ui_btn_exit_01" />
        <Texture Id="txrUiBtn_exit_P" Source="ui_btn_exit_03" />
        <Texture Id="txrUiBtn_play_N" Source="ui_btn_play_01" />
        <Texture Id="txrUiBtn_play_P" Source="ui_btn_play_03" />
        <Texture Id="txrUiBtn_restart_N" Source="ui_btn_restart_01" />
        <Texture Id="txrUiBtn_restart_P" Source="ui_btn_restart_03" />
    </Resources>
    <Resources RootFolder="Sound">
        <SoundFile Id="sndButtonTapped" Source="btn_click"/>
    </Resources>

    
    
    <Class Id="clsButton">
		<Group>
            <Sound Id="this_sndButtonTapped" FileId="sndButtonTapped" Volume="0.5" Pitch="0"/>

            <!-- button is pressed -->
            <SequenceSet Id="this_setPressed" RepeatCount="1" InProgress="false">
                <Do Action="this_sndButtonTapped.Start()" />
                <Delay Duration="0.1" /> <!-- pause for animation and fxs -->
                <Do Action="this:Action;" />
            </SequenceSet>

            <TapArea Id="this_tapArea" Action="this_setPressed.Play();"/>

            <!-- state : basic, not pressed -->
            <BoolTrigger Condition="not this_setPressed.InProgress" 
                         Group="this_sttButton">
                <Image TextureId="txrUiBtn_@BtnImg_N" StretchMode="ActualSize" />
            </BoolTrigger>
            
            <!-- state : pressed -->
            <BoolTrigger Group="this_sttButton">
                <Image TextureId="txrUiBtn_@BtnImg_P" StretchMode="ActualSize" />
            </BoolTrigger>
		</Group>
	</Class>
	
</Include>










