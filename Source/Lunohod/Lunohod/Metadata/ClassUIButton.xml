<!--<Level xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="file:///D:/Lunohod/Documentation/schema0.xsd" Name="Lvl_1D_Boxes" Bounds="0, 0, 480, 320">-->
    
<Include>
    <Resources RootFolder="Global">
        <Texture Id="txtButtons" Source="ui_buttons" />
    </Resources>
    <Resources RootFolder="Sound">
        <SoundFile Id="sndButtonTapped" Source="btn_click"/>
    </Resources>

    <Class Id="clsButton">
		<Group>
	    	<Group Id="this_grpInit">
		    	<BoolTrigger Condition="'@BtnImg'=='back'" Action="this_sprUnpressed.CurrentFrame=00" />
		    	<BoolTrigger Condition="'@BtnImg'=='exit'" Action="this_sprUnpressed.CurrentFrame=01" />
		    	<BoolTrigger Condition="'@BtnImg'=='forwind'" Action="this_sprUnpressed.CurrentFrame=02" />
		    	<BoolTrigger Condition="'@BtnImg'=='info'" Action="this_sprUnpressed.CurrentFrame=03" />
		    	<BoolTrigger Condition="'@BtnImg'=='next'" Action="this_sprUnpressed.CurrentFrame=04" />
		    	<BoolTrigger Condition="'@BtnImg'=='play'" Action="this_sprUnpressed.CurrentFrame=05" />
		    	<BoolTrigger Condition="'@BtnImg'=='question'" Action="this_sprUnpressed.CurrentFrame=06" />
		    	<BoolTrigger Condition="'@BtnImg'=='restart'" Action="this_sprUnpressed.CurrentFrame=07" />
		    	<BoolTrigger Condition="'@BtnImg'=='sound'" Action="this_sprUnpressed.CurrentFrame=08" />
		    	<Do Action="this_sprPressed.CurrentFrame=this_sprUnpressed.CurrentFrame+9" InProgress="true" />
		    	<Do Action="this_grpInit.Disable()" />
	    	</Group>

            <Sound Id="this_sndButtonTapped" FileId="sndButtonTapped" Volume="0.5" Pitch="0"/>

            <!-- button is pressed -->
            <SequenceSet Id="this_setPressed" RepeatCount="1" InProgress="false">
                <Do Action="this_sndButtonTapped.Start()" />
                <Delay Duration="0.1" /> <!-- pause for animation and fxs -->
                <Do Action="this:Action;" />
            </SequenceSet>

            <TapArea Id="this_tapArea" Action="this_setPressed.Play();"/>

            <!-- state : basic, not pressed -->
            <BoolTrigger Condition="not this_setPressed.InProgress" 
                         Group="this_sttButton">
                <Sprite Id="this_sprUnpressed" TextureId="txtButtons" FrameBounds="0,0,67,68" FrameCount="9" />
            </BoolTrigger>
            
            <!-- state : pressed -->
            <BoolTrigger Group="this_sttButton">
                <Sprite Id="this_sprPressed" TextureId="txtButtons" FrameBounds="0,0,67,68" FrameCount="9" />
            </BoolTrigger>
		</Group>
	</Class>
	
</Include>










