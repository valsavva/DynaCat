<?xml version="1.0" encoding="utf-8" ?>
<Include>
	<Class Id="classRat">
		<Enemy>
			<!--
			<DistanceTrigger ObjectId1="this" ObjectId2="hero" Value="80" Action="hero:closeEnemy"/>
			-->
			<DistanceTrigger ObjectId1="this" ObjectId2="hero" Value="80" Action="this:closeHero"/>

			<State Id="this_closeHero" When="this:closeHero">
				<Image TextureId="cat">
					<NumAnimation Id="qq" From="0" To="360" Duration="2" Target="this.Rotation" Fill="Reset"/>
				</Image>
			</State>
			<State Id="this_default">
				<Image TextureId="rat" />
			</State>
		</Enemy>	
	</Class>
</Include>
