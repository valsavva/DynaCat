<Include>	

	<Resources RootFolder="Sound">
		<SoundFile Id="sndEnemyRat5Dying" Source="skeletonFX_enemy_dead_scream_1"/>
        <SoundFile Id="sndEnemyRat5Hit1" Source="rat_hit1_demo"/>
        <SoundFile Id="sndEnemyRat5Hit2" Source="rat_hit2_demo"/>
        <SoundFile Id="sndEnemyRat5Hit3" Source="rat_hit3_demo"/>	
    </Resources>
	
    <Resources RootFolder="Textures">
        <Texture Id="txrEnemyRat5Default" Source="EnemyRat5_enemy_3"/>
        <Texture Id="txrEnemyRat5Attack" Source="EnemyRat5_enemy_3"/>
        <Texture Id="txrEnemyRat5Dying" Source="EnemyRat5_enemy_3"/>
        <Texture Id="txrCloud1" Source="cloud1"/>
    </Resources>

    <Resources RootFolder="Global">
        <Font Id="Splash14Font" Source="Splash14Font" />
    </Resources>

         
	<Class Id="clsEnemyRat5">
		<Enemy IsExploding="true" Damage="20" Points="110">

<!-- Points Animation -->
            <Group Id="this_grpShowPoints" Bounds="0,0,100,50" IsRoot="true" Depth="0.2" Enabled="false">
                <Do Action="this_grpShowPoints.X=this.X;this_grpShowPoints.Y=this.Y" InProgress="true" />
                <Text FontId="Splash14Font" Text="='+' + system.Str(this.Points)" Location="6,-12" Color="#FFFFFF">
                    <SequenceSet RepeatCount="1" InProgress="true">
                        <ParallelSet RepeatCount="1">
                            <NumAnimation Target="this_grpShowPoints.Opacity" From="1" To="0.5" RepeatCount="1" Duration="1" Fill="Hold" />
                            <RandomSet RepeatCount="1" >
                                <NumAnimation Target="this_grpShowPoints.Y" From="0" To="-50" IsDelta="true" RepeatCount="1" Duration="1" Fill="Hold" />
                                <NumAnimation Target="this_grpShowPoints.Y" From="0" To="-40" IsDelta="true" RepeatCount="1" Duration="1" Fill="Hold" />
                            </RandomSet>
                            <RandomSet RepeatCount="1" >
                                <NumAnimation Target="this_grpShowPoints.X" From="-4" To="4" IsDelta="true" Autoreverse="true" RepeatCount="1.25" Duration="0.4" Fill="Hold" />
                                <NumAnimation Target="this_grpShowPoints.X" From="4" To="-4" IsDelta="true" Autoreverse="true" RepeatCount="1.25" Duration="0.4" Fill="Hold" />
                            </RandomSet>
                        </ParallelSet>
                        <Do Action="this.Disable()"/>
                    </SequenceSet>
                </Text>
            </Group>

            <Image Id="this_imgCloud1" TextureId="txrCloud1" Bounds="-2, 3, 32, 23" Enabled="false"/>

 <!-- States -->

            <!-- explosion -->
            <!-- dying -->
			<BoolTrigger Condition="this:BoomClose" EnterAction="hero.AddScore(this.Points);this_setDying.Start()" StayTriggered="true" Group="this_sttStates">
				<Image Id="this_imgEnemyRat5Dying" TextureId="txrEnemyRat5Dying" Bounds="-17, -2, 52, 32" />
			</BoolTrigger>
            <ParallelSet Id="this_setDying" InProgress="false">
                <Do Action="hero:+GoodExplosion;this_grpShowPoints.Enable()"/>
                <Sound FileId="sndEnemyRat5Dying" Volume="0.5" Pitch="0" Pan="0" InProfress="true"/>
                <NumAnimation Target="this_imgEnemyRat5Dying.Opacity" From="1" To="0" Duration="0.2" Autoreverse="false" RepeatCount="1" Fill="End"/>
                <SequenceSet>
                    <Do Action="this_imgCloud1.Enable()" />
                    <NumAnimation Target="this_imgCloud1.Opacity" From="1" To="0" Duration="0.5" Autoreverse="false" RepeatCount="1" Fill="End"/>
                </SequenceSet>
            </ParallelSet>


            <!-- attack -->
            <IntersectionTrigger ObjectId1="hero" ObjectId2="this" EnterAction="this.Attack();this_anmDamageDealing.Start()" ExitAction="this_anmDamageDealing.Stop()" Action="hero:GottaDamage" Group="this_sttStates">
                <Image Id="this_txrEnemyRat5Attack" TextureId="txrEnemyRat5Attack" Bounds="-17, -2, 52, 32"/>
            </IntersectionTrigger>


            <SequenceSet Id="this_anmDamageDealing" RepeatCount="0">
                <Do Action="this_anmAttack.Start()" />
                <Delay Duration="system.Rnd(0.7,1.3)" />
            </SequenceSet>

            <ParallelSet Id="this_anmAttack" RepeatCount="1">
                <Do Action="this.Attack()" />
                <RandomSet>
                    <Sound FileId="sndEnemyRat5Hit1" Volume="0.5" Pitch="-0.3" Pan="0"/>
                    <Sound FileId="sndEnemyRat5Hit2" Volume="0.5" Pitch="-0.3" Pan="0"/>
                    <Sound FileId="sndEnemyRat5Hit3" Volume="0.5" Pitch="-0.3" Pan="0"/>
                    <Sound FileId="sndEnemyRat5Hit1" Volume="0.5" Pitch="-0.4" Pan="0"/>
                    <Sound FileId="sndEnemyRat5Hit2" Volume="0.5" Pitch="-0.4" Pan="0"/>
                    <Sound FileId="sndEnemyRat5Hit3" Volume="0.5" Pitch="-0.4" Pan="0"/>
                </RandomSet>
                <NumAnimation Duration="0.1" Target="this_txrEnemyRat5Attack.Opacity" Autoreverse="true" From="1" To="0" RepeatCount="5"/>
            </ParallelSet>

            <!-- default -->
			<BoolTrigger Group="this_sttStates">
				<Image Id="this_txrEnemyRat5Default" TextureId="txrEnemyRat5Default" Bounds="-17, -2, 52, 32"/>
			</BoolTrigger>
			
		</Enemy>
	</Class>

</Include>

















