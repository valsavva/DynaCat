	<Class Id="clsIce">
		<Block>
			<Image TextureId="blank" BackColor="#00AA00" Opacity="0.3"/>
			<IntersectionTrigger ObjectId1="this" ObjectId2="hero" Action="hero:OnIce"/>
		</Block>
	</Class>
