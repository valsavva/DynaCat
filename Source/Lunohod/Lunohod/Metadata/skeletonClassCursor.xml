<Include>	
           	
	<!-- =========================================================================================  -->
	<!-- clsTower -->
	<!-- =========================================================================================  -->
	
	<Class Id="clsTower">
		<Tower SignalSpeed="256"/>
	</Class>

	<!-- =========================================================================================  -->
	<!-- clsHero -->
	<!-- =========================================================================================  -->
	
    <Resources RootFolder="Textures">
        <Texture Id="cursor_50x50_light_blue" Source="cursor_50x50_light_blue" />
    </Resources>
	
	<Class Id="clsHero">
		<Hero Speed="84" Direction="0,0">
			<BoolTrigger Condition="this:death" EnterAction="this_anmDeath.Start" StayTriggered="false" Group="heroStates">
				<Image TextureId="cursor_50x50_light_blue">
					<NumAnimation Id="this_anmDeath" Duration="0.1" Target="Opacity" Autoreverse="true" From="1" To="0" RepeatCount="7777777"/>
				</Image>
			</BoolTrigger>
			<BoolTrigger Id="default" Group="heroStates">
				<Image TextureId="cursor_50x50_blue" />
			</BoolTrigger>
		</Hero>
	</Class>

	<!-- =========================================================================================  -->
	<!-- clsEnemy -->
	<!-- =========================================================================================  -->
	
    <Resources RootFolder="Textures">
        <Texture Id="cursor_50x50_red" Source="cursor_50x50_red" />
    </Resources>

	<Class Id="clsEnemy">
		<Enemy>
			<IntersectionTrigger ObjectId1="hero" ObjectId2="this" Action="hero:death" StayTriggered="false" Group="enemyStates">
				<Image Id="skin" TextureId="cursor_50x50_red"/>
			</IntersectionTrigger>
			<BoolTrigger Id="this_default" Group="enemyStates">
				<Image TextureId="cursor_50x50_purple" />
			</BoolTrigger>
		</Enemy>
	</Class>

	<!-- =========================================================================================  -->
	<!-- clsFood -->
	<!-- =========================================================================================  -->

	<Class Id="clsFood">
		<Enemy>
			<IntersectionTrigger ObjectId1="hero" ObjectId2="this" EnterAction="this_anmEated.Start" StayTriggered="true" Group="enemyStates">
				<Image TextureId="cursor_50x50_green">
					<NumAnimation Id="this_anmEated" Duration="0.2" Target="this.Opacity" Autoreverse="false" From="1" To="0" Fill="Hold" RepeatCount="5"/>
				</Image>
			</IntersectionTrigger>
			<BoolTrigger Id="this_default" Group="enemyStates">
				<Image TextureId="cursor_50x50_green" />
			</BoolTrigger>	
		</Enemy>	
	</Class>

</Include>