	<!-- =========================================================================================  -->
	<!-- clsTower -->
	<!-- =========================================================================================  -->
	
	<Class Id="clsTower">
		<Tower SignalSpeed="256">
			<!-- We'll need to remove this -->
			<Text Text="=SignalSpeed" FontId="SystemFont" Location="10,10" Color="#000000"/>
			<BoolTrigger Condition="system:towerIncreaseSpeed" Action="SignalSpeed=SignalSpeed+10"/>
			<BoolTrigger Condition="system:towerReduceSpeed" Action="SignalSpeed=SignalSpeed-10"/>
		</Tower>
	</Class>

	<!-- =========================================================================================  -->
	<!-- clsHero -->
	<!-- =========================================================================================  -->
	
    <Resources RootFolder="TestTextures">
        <Texture Id="cursor_50x50_light_blue" Source="cursor_50x50_light_blue"/>
        <Texture Id="cursor_50x50_gray" Source="cursor_50x50_gray"/>
        <Texture Id="cursor_50x50_blue" Source="cursor_50x50_blue"/>
    </Resources>
	
	<Class Id="clsHero">
		<Hero Speed="84" Direction="0,0" Deceleration="0">

			<Include File="includeSkeletonHeroMotions.xml"/>


			<BoolTrigger Condition="this:death" EnterAction="this_anmDeath.Start();fx_thisDeath.Start()" StayTriggered="true" Group="heroStates">
				<Sound Id="fx_thisDeath" FileId="skeletonFX_crash_1" Volume="0.5" Pitch="0" Pan="0" InProfress="true"/>
				<Image TextureId="cursor_50x50_light_blue">
					<NumAnimation Id="this_anmDeath" Duration="0.1" Target="Opacity" Autoreverse="true" From="1" To="0" RepeatCount="5"/>
				</Image>
			</BoolTrigger>
			
			<BoolTrigger Condition="this:eating" EnterAction="fx_thisEating.Start()" StayTriggered="false">
				<RandomSet Id="fx_thisEating">
					<Sound FileId="skeletonFX_hero_eating_1" Volume="0.5" Pitch="0" Pan="0" InProfress="true"/>
					<Sound FileId="skeletonFX_hero_eating_2" Volume="0.5" Pitch="0" Pan="0" InProfress="true"/>
					<Sound FileId="skeletonFX_hero_eating_3" Volume="0.5" Pitch="0" Pan="0" InProfress="true"/>
					<Sound FileId="skeletonFX_hero_eating_4" Volume="0.5" Pitch="0" Pan="0" InProfress="true"/>
				</RandomSet>
			</BoolTrigger>
			
			<BoolTrigger Id="default" Group="heroStates">
				<Image TextureId="cursor_50x50_blue"/>
			</BoolTrigger>
		</Hero>
	</Class>

	<!-- =========================================================================================  -->
	<!-- clsHeroTir -->
	<!-- =========================================================================================  -->
	
    <Resources RootFolder="TestTextures">
