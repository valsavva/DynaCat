	<Class Id="clsButton">
		<Group>
			<TapArea Action="this_setPress.Start()" />
			<ParallelSet Id="this_setPress">
				<Do Action="@action"/>
				<SequenceSet>
					<Do Action="this_img.Enable()"/>
					<NumAnimation Target="this_img.Opacity" From="0" To="0.4" Duration="0.2" Smoothing="Flat" Autoreverse="true" RepeatCount="1"/>
					<Do Action="this_img.Disable()"/>
				</SequenceSet>
			</ParallelSet>
			<Image Id="this_img" TextureId="blank" BackColor="#FF0000" Opacity="0" Enabled="false"/>
		</Group>
	</Class>
	
	<Dashboard BackColor="#FFFFFFFF">
		<Viewport Bounds="50,50,380,270" />
    	<Image TextureId="dashboard" Opacity="0.2"/>

		<Group Id="grp01" Bounds="0, 104, 72, 68" Class="clsButton" ClassParams="@action=~system:up"/>
		<Group Id="grp02" Bounds="408, 104, 72, 68" Class="clsButton" ClassParams="@action=~system:up"/>

		<Group Id="grp03" Bounds="0, 174, 72, 60" Class="clsButton" ClassParams="@action=~system:left"/>
		<Group Id="grp04" Bounds="408, 174, 72, 60" Class="clsButton" ClassParams="@action=~system:right"/>

		<Group Id="grp05" Bounds="0, 236, 72, 84" Class="clsButton" ClassParams="@action=~system:down"/>
		<Group Id="grp06" Bounds="408, 236, 72, 84" Class="clsButton" ClassParams="@action=~system:down"/>
		
		<Group Id="grp07" Bounds="147, 248, 74, 72" Class="clsButton" ClassParams="@action=~system:stop"/>
		<Group Id="grp08" Bounds="259, 248, 74, 72" Class="clsButton" ClassParams="@action=~system:explosion"/>
		
		<Image TextureId="blank" Bounds="450,5,20,20" BackColor="#FF0000" Opacity="0.5"/>
		<TapArea Bounds="430,00,60,60" Event="system:endLevel" />
		
		
