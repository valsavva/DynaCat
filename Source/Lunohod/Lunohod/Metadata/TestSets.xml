<?xml version="1.0" encoding="utf-8"?>
<Level Name="testLevel1" Bounds="0,0,480,320">

	<Include File="ClassHero.xml" />
	<Include File="ClassRat.xml" />

	<!-- resources -->
	<Resources RootFolder="TestLevel1">
		<Texture Id="blank" Source="blank" />
		<Texture Id="chargers" Source="chargers" />
		<Texture Id="cat" Source="cat"/>
		<Texture Id="explosionSprite" Source="explosion1"/>
		<Texture Id="rat" Source="rat"/>
		<Texture Id="rat_walk" Source="rat_walk"/>
	</Resources>


	<Resources RootFolder="Sound">
		<MusicFile Id="gameMusic" Source="gameMusic" />
		<SoundFile Id="explosion1" Source="explosion" />
		<SoundFile Id="explosion2" Source="explosion" />
		<SoundFile Id="explosion3" Source="explosion" />
		<SoundFile Id="laserFire" Source="laserFire" />
	</Resources>

	<Layer Id="action" BackColor="#FFFFFFFF">
		<Tower Bounds="0,0,35,35" SignalSpeed="600"/>

		<Image Id="image1" TextureId="chargers" Bounds="50,150,50,50" Rotation="0" Opacity="1"/>
		<SequenceSet>
			<IntersectionTrigger ObjectId1="image1" ObjectId2="hero" EnterAction="Resume"/>
			<NumAnimation Target="image1.X" From="0" To="50" Duration="0.3" RepeatCount="1" IsDelta="true" Autoreverse="true"/>
			<Sound FileId="laserFire" Volume="0.5"/>
			<NumAnimation Target="image1.Y" From="0" To="50" Duration="0.3" RepeatCount="1" IsDelta="true" Autoreverse="true"/>
			<Sound FileId="laserFire" Volume="0.5"/>
		</SequenceSet>

		<Image Id="image2" TextureId="chargers" Bounds="240,250,50,50" Rotation="0" Opacity="1"/>
		<RandomSet Probabilities="2,1,2,1,8">
			<IntersectionTrigger ObjectId1="image2" ObjectId2="hero" Action="Resume"/>
			<NumAnimation Id="X1" Target="image2.X" From="0" To="50" Duration="0.3" RepeatCount="1" IsDelta="true" Autoreverse="true"/>
			<Sound FileId="laserFire" Volume="0.5"/>
			<NumAnimation Id="X2" Target="image2.Y" From="0" To="50" Duration="0.3" RepeatCount="1" IsDelta="true" Autoreverse="true"/>
			<Sound FileId="laserFire" Volume="0.5"/>
			<ParallelSet>
				<NumAnimation Target="image2.X" From="0" To="-50" Duration="0.3" RepeatCount="1" IsDelta="true" Autoreverse="true"/>
				<NumAnimation Target="image2.Y" From="0" To="-50" Duration="0.3" RepeatCount="1" IsDelta="true" Autoreverse="true"/>
			</ParallelSet>
		</RandomSet>

		<Image Id="image3" TextureId="chargers" Bounds="350,150,50,50" Rotation="0" Opacity="1"/>
		<ParallelSet>
			<IntersectionTrigger ObjectId1="image3" ObjectId2="hero" EnterAction="Resume"/>
			<NumAnimation Target="image3.X" From="0" To="50" Duration="0.3" RepeatCount="1" IsDelta="true" Autoreverse="true"/>
			<Sound FileId="laserFire" Volume="0.5"/>
			<NumAnimation Target="image3.Y" From="0" To="50" Duration="0.3" RepeatCount="1" IsDelta="true" Autoreverse="true"/>
			<Sound FileId="laserFire" Volume="0.5"/>
		</ParallelSet>

		<Hero Id="hero" Bounds="240,150,40,37" Class="classHero"/>
	</Layer>

	<Include File="Dashboard.xml" />

</Level>

