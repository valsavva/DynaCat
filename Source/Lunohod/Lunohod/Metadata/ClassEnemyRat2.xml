<Include>	

	<Resources RootFolder="Sound">
		<SoundFile Id="sndEnemyRat2Dying" Source="skeletonFX_enemy_dead_scream_1"/>
        <SoundFile Id="sndEnemyRat2Hit1" Source="rat_hit1_demo"/>
        <SoundFile Id="sndEnemyRat2Hit2" Source="rat_hit2_demo"/>
        <SoundFile Id="sndEnemyRat2Hit3" Source="rat_hit3_demo"/>
    </Resources>
	
    <Resources RootFolder="Textures">
        <Texture Id="txrEnemyRat2Default" Source="EnemyRat2_enemy_4"/>
        <Texture Id="txrEnemyRat2Attack" Source="EnemyRat2_enemy_4"/>
        <Texture Id="txrEnemyRat2Dying" Source="EnemyRat2_enemy_4"/>
    </Resources>

         
	<Class Id="clsEnemyRat2">
		<Enemy IsExploding="true" Damage="3">
		
<!-- States -->

            <!-- explosion -->
            <!-- dying -->
			<BoolTrigger Condition="this:BoomClose" EnterAction="this_setDying.Start()">
				<Image TextureId="txrEnemyRat2Dying"/>
			</BoolTrigger>
            <ParallelSet Id="this_setDying" InProgress="false">
                <!--<Let Target="this.Damage" Value="0" />-->
                <Do Action="this:+Destroyed;hero:+GoodExplosion"/>
                <Sound FileId="sndEnemyRat2Dying" Volume="0.5" Pitch="0" Pan="0" InProfress="true"/>
    			<SequenceSet>
    				<NumAnimation Target="this.Opacity" From="1" To="0" Duration="0.3" Autoreverse="false" RepeatCount="2"/>
    				<Do Action="this.Disable()"/>
    			</SequenceSet>
			</ParallelSet>

            <!-- attack -->
            <BoolTrigger Condition="!this:Destroyed">
                <IntersectionTrigger ObjectId1="hero" ObjectId2="this" EnterAction="this.Attack();this.Attack();this_anmDamageDealing.Start()" ExitAction="this_anmDamageDealing.Stop()" Action="hero:GottaDamage" Group="this_sttStates">
                    <Image Id="this_txrEnemyRat2Attack" TextureId="txrEnemyRat2Attack" Bounds="-15, -4, 43, 29"/>
                </IntersectionTrigger>
            </BoolTrigger>

            <SequenceSet Id="this_anmDamageDealing" RepeatCount="0">
                <Do Action="this_anmAttack.Start()" />
                <Delay Duration="system.Rnd(0.3,0.8)" />
            </SequenceSet>

            <ParallelSet Id="this_anmAttack" RepeatCount="1">
                <Do Action="this.Attack()" />
                <RandomSet>
                    <Sound FileId="sndEnemyRat2Hit1" Volume="0.5" Pitch="0.2" Pan="0"/>
                    <Sound FileId="sndEnemyRat2Hit2" Volume="0.5" Pitch="0.2" Pan="0"/>
                    <Sound FileId="sndEnemyRat2Hit3" Volume="0.5" Pitch="0.2" Pan="0"/>
                    <Sound FileId="sndEnemyRat2Hit1" Volume="0.5" Pitch="0.3" Pan="0"/>
                    <Sound FileId="sndEnemyRat2Hit2" Volume="0.5" Pitch="0.3" Pan="0"/>
                    <Sound FileId="sndEnemyRat2Hit3" Volume="0.5" Pitch="0.3" Pan="0"/>
                </RandomSet>
                <NumAnimation Duration="0.1" Target="this_txrEnemyRat2Attack.Opacity" Autoreverse="true" From="1" To="0" RepeatCount="5"/>
            </ParallelSet>

            <!-- default -->
			<BoolTrigger Group="this_sttStates">
				<Image Id="this_txrEnemyRat2Default" TextureId="txrEnemyRat2Default" Bounds="-15, -4, 43, 29"/>
                <!--<Image TextureId="blank" BackColor="#00FF00" Opacity="0.5"/>-->
			</BoolTrigger>
			
		</Enemy>
	</Class>

</Include>
















