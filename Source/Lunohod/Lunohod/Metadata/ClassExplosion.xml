<Include>
	<Class Id="clsExplosion">
        <Explosion Bounds="0,0,400,400" Ranges="BoomVeryClose=50,BoomClose=85,BoomFar=170,BoomVeryFar=210,BoomVeryVeryFar=250">
			<Image Id="this_imgBomb" Bounds="190,190,31,9" RotationCenter="15,5" TextureId="txrBomb" Opacity="1" Depth="0.09"/>
            
			<Image Id="this_imgExplosion1" Bounds="75,96,250,208" TextureId="txrExplosion" Enabled="false" FlipEffects="Horizontally" Depth="0.4"/>
            <Image Id="this_imgExplosion2" Bounds="75,96,250,208" TextureId="txrExplosion" Enabled="false" FlipEffects="Vertically" Depth="0.4"/>
            <Image Id="this_imgExplosion3" Bounds="75,96,250,208" TextureId="txrExplosion" Enabled="false" FlipEffects="Horizontally|Vertically" Depth="0.4"/>
            <Image Id="this_imgExplosion4" Bounds="75,96,250,208" TextureId="txrExplosion" Enabled="false" Depth="0.4"/>
            
			<Sound Id="this_sndExplosion" FileId="sndExplosion" Volume="0.5" Pitch="0" Pan="0"/>
			<Sound Id="this_sndBombHiss" FileId="sndBombHiss" Volume="0.5" Pitch="0" Pan="0"/>
			<SequenceSet InProgress="true">
				<Do Action="this_sndBombHiss.Start();hero:+sttWaitingExplosion"/>
                <ParallelSet RepeatCount="1">
                    <NumAnimation Target="this_imgBomb.Rotation" From="0" To="360" Duration="0.3" Autoreverse="false" RepeatCount="1"/>
				    <NumAnimation Target="this_imgBomb.Y" From="0" To="-40" Duration="0.2" IsDelta="true" Autoreverse="true" RepeatCount="1"/>
                </ParallelSet>
				<Do Action="this_imgBomb.Disable()"/>
                <RandomSet RepeatCount="1" InProgress="true">
                    <Do Action="this_imgExplosion1.Enable()" />
                    <Do Action="this_imgExplosion2.Enable()" />
                    <Do Action="this_imgExplosion3.Enable()" />
                    <Do Action="this_imgExplosion4.Enable()" />
                </RandomSet>
				<Do Action="this_sndExplosion.Start();this_sndBombHiss.Stop();this.Explode()"/>
				<NumAnimation From="1" To="0" Smoothing="Flat" Duration="0.2" Autoreverse="false" Target="this.Opacity" RepeatCount="2"/>
				<Do Action="hero:-sttWaitingExplosion"/>
				<Do Action="this.Disable()"/>
			</SequenceSet>
		</Explosion>
	</Class>
</Include>