<?xml version="1.0" encoding="UTF-8"?>

<Screen Bounds="0,0,480,320" IsModal="true">
    <Include File="ClassUIMovingBackground.xml" />
	<Include File="CommonTextures.xml" />
    <Include File="ClassUIButton.xml" />
    <Include File="ClassUIMuteButton.xml" />

    <Resources RootFolder="Global">
        <Texture Id="txrBackground" Source="ScrMain_BG" />
        <Texture Id="txrFrame" Source="ScrMain_frame" />
        <Texture Id="txrSeriesPanel1" Source="ScrMain_panel_01" />
        <Texture Id="txrSeriesPanel2" Source="ScrMain_panel_02" />
        <Texture Id="txrSeriesPanel3" Source="ScrMain_panel_03" />
        <Texture Id="txrLogo" Source="dynacat_logo" />
    </Resources>

    <!--<Resources RootFolder="Sound">
        <SoundFile Id="sfGameMusic" Source="gameMusic.mp3"/>
    </Resources>-->

        <Class Id="clsSeriesPanel">
		<Group>
			<Image TextureId="txrSeriesPanel@seriesNumberParam" StretchMode="ActualSize" />
			<TapArea Action="system.StartSeries(@seriesNumberParam);" />
			<Text Text="=system.Str(system.GetSeriesScore(@seriesNumberParam))" Location="17,126" FontId="Splash14Font" Scale="0.7" />
			<Text Text="=system.Str(system.GetSeriesStars(@seriesNumberParam))+'/'+system.Str(system.GetSeriesAvailableStars(@seriesNumberParam))" Location="70,126" FontId="Splash14Font" Scale="0.7" />
		</Group>
	</Class>

	<Layer Id="background">
        <!--<Music Id="sndGameMusic" FileId="sfGameMusic" Volume="0.5"/>-->

		<Group Class="clsMovingBackground" ClassParams="@textureIdParam=txrBackground" />
	</Layer>
	<Layer>
	
		<Image TextureId="txrFrame" />

        <Image TextureId="txrLogo" Bounds="-10,0,180,120" BackColor="#EEEEEE"/>

        <Group Bounds="050,070,130,170" Class="clsSeriesPanel" ClassParams="@seriesNumberParam=1" />
		<Group Bounds="180,070,130,170" Class="clsSeriesPanel" ClassParams="@seriesNumberParam=2" />
		<Group Bounds="310,070,130,170" Class="clsSeriesPanel" ClassParams="@seriesNumberParam=3" />
		
		<Group Id="btnCredits" Class="clsButton" ClassParams="@BtnImg=4" Bounds="180, 240, 62, 62">
		    <BoolTrigger Condition="btnCredits:Action" EnterAction="system.StartScreen('ScreenCredits.xml')" />
		</Group>
		<Group Id="btnMute" Bounds="250,240, 62,62" Class="clsMuteButton" />

    </Layer>
</Screen>