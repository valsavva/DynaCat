			<Text Location="0,0" FontId="SystemFont" Text="Text01 Text01 Text01 Text01 Text01 Text01" />
			<Image Bounds="35,0,50,50" TextureId="chargers" />
		</Group>

		<Group Location=" 10,250">
			<Image Location="  5,0" TextureId="chargers" FlipEffects="Vertically"/>
			<Image Location=" 75,0" TextureId="chargers" FlipEffects="Horizontally"/>
			<Sprite Id="imgFlipping" Location="145,0" TextureId="chargers" FrameBounds="0,0,50,50"/>
			<!--<Image Id="imgFlipping" Location="145,0" TextureId="chargers" FlipEffects="Vertically|Horizontally"/>-->

			<Text Location="  5,50" Text="VERTICAL" FontId="SystemFont" FlipEffects="Vertically"/>
			<Text Location="  75,50" Text="HORIZONTAL" FontId="SystemFont" FlipEffects="Horizontally"/>
			<Text Location="145,50" Text="V AND H" FontId="SystemFont" FlipEffects="Vertically|Horizontally"/>
		</Group>

        <BoolTrigger Condition="true">
			<Do Action="imgFlipping.FlipEffects='Vertically'"/>
