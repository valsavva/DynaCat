			<Text Location="0,0" FontId="SystemFont" Text="Text01 Text01 Text01 Text01 Text01 Text01" />
			<Image Bounds="165,0,50,50" TextureId="chargers" />
		</Group>
		<Group Bounds="150,40,100,100">
			<Text Location="0,0" FontId="SystemFont" Text="Text01 Text01 Text01 Text01 Text01 Text01" />
			<Image Bounds="100,0,50,50" TextureId="chargers" />
		</Group>
		<Group Bounds="250,70,100,100">
			<Text Location="0,0" FontId="SystemFont" Text="Text01 Text01 Text01 Text01 Text01 Text01" />
			<Image Bounds="35,0,50,50" TextureId="chargers" />
		</Group>

